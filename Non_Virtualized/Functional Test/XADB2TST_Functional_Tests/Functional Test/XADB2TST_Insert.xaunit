            <xadb2tst-exp-cprnr type="NumericPacked" length="11" bytes="6" signed="true" decimals="0" />
            <xadb2tst-exp-tstmp type="Character" length="26" bytes="26" />
            <xadb2tst-exp-statuscode type="Character" length="1" bytes="1" />
